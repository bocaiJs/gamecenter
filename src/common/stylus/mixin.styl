// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
    background-repeat: no-repeat;

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 设置换行
warp()
    white-space: normal;
    word-wrap: break-word;
    word-break: break-all;
// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
//加载组件
loading()
    position: absolute;
    width: 100%;
    top: 50%;
    transform: translateY(-50%);
//star组件
star()
    width: 50px;
    display: inline-block;
    height: 10px;
    position: relative;
    overflow: hidden;
    .star-icon
        position: absolute;
        left: 0;
        top: 0;
        display: inline-block;
        height: 10px;
        background: url('./star.png');
        background-size: 10px 10px;
//滑动组件
slider()
    .slider-enter-active, .slider-leave-active 
        transition: all 350ms ease
    .slider-enter, .slider-leave-to ,.slider-leave-active
        transform: translate3d(100%, 0, 0);
opacity()
    .opacity-enter-active,.opacity-leave-active{
        transition: all 350ms ease;
        top: 0;
        height: 100%;
        position: absolute;
        backface-visibility: hidden;
        will-change: opacity;
    }
    .opacity-enter {
        opacity: 0;
    }

    .opacity-leave-active {
        opacity: 0;
    }       
// 下载按钮
downloadbtn()
    width: 60px;
    height: 40px;
    border-radius: 5px;
    background: #58d2ec;
    text-align: center;
    line-height: 40px;
    color: #ffffff;
    z-index: 10;
    outline: none;
    border: none;
    text-decoration: none;
    font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback';
// 文本溢出
text-over()
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
//空出头部导航
sub-position()
    position: absolute;
    width: 100%;
    top: 44px;
    bottom: 0;

tips()
    .tips-title {
            color: red;
            width: 100%;
            height: 46px;
            line-height: 46px;
            padding: 0 15px;
            box-sizing: border-box;
            background: #f9f9f9;
            font-size: $font-size-large;
            color: #222222;
            font-weight: bold;
        }

    .tip-box {
        width: 100%;
        padding: 15px;
        box-sizing: border-box;

        p {
            font-size: $font-size-medium;
            color: #555555;
            margin-bottom: 10px;
        }
    }  